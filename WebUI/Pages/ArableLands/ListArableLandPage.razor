@page "/arableLand/list"
@using WebUI.Components.DataGrid
@using WebUI.ServicesModel.ArableLand
@attribute [Authorize]

<h2 class="text-center"> Земи </h2>


@if (DataGrid is null)
{
    <div class="loader"></div>
}
else
{
    <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Добави" Click="@(() => AddArableLand())"/>

    <DynamicDataGrid TData="ArableLandModel" Data="@DataGrid"></DynamicDataGrid>
}

