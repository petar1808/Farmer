@using WebUI.ServicesModel.Seeding
@attribute [Authorize]

<FarmerFormWithButtons TModel="AddSeedingModel"
                       Model="@Seeding"
                       ItemId="0"
                       OnSubmit="@OnSubmit"
                       OnClose="@OnClose">
    <RadzenFormField Text="Земя" Variant="Variant.Filled">
        <ChildContent>
            <RadzenDropDown Data=@ArableLands
                            @bind-Value=@Seeding.ArableLandId
                            ValueProperty="Value"
                            TextProperty="Name"
                            Name="ArableLand"
                            Class="w-100" />
        </ChildContent>
        <Helper>
            <RadzenRequiredValidator Component="ArableLand" Text="Земята е задължителна" DefaultValue="0" />
        </Helper>
    </RadzenFormField>
</FarmerFormWithButtons>