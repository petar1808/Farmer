@using WebUI.ServicesModel.Identity
@attribute [Authorize]

<FarmerFormWithButtons TModel="CreateUserModel"
                       Model="@CreateUserModel"
                       ItemId="0"
                       OnSubmit="@OnSubmit"
                       OnClose="@OnClose">

    <RadzenFormField Text="Имейл" Variant="Variant.Filled">
        <ChildContent>
            <RadzenTextBox style="display: block" Name="UserEmail" @bind-Value=@CreateUserModel.UserEmail Class="w-100" />
        </ChildContent>
        <Helper>
            <RadzenEmailValidator Component="UserEmail" Text="Невалиден емайл" Style="position: absolute" />
        </Helper>
    </RadzenFormField>
    <RadzenFormField Text="Име" Variant="Variant.Filled">
        <ChildContent>
            <RadzenTextBox style="display: block" Name="FirstName" @bind-Value=@CreateUserModel.FirstName Class="w-100" />
        </ChildContent>
        <Helper>
            <RadzenLengthValidator Component="FirstName" Min="2" Text="Името трябва да съдържа поне 2 знака" Style="position: absolute" />
            <RadzenLengthValidator Component="FirstName" Max="50" Text="Името трябва да съдържа най-много 50 знака" Style="position: absolute" />
        </Helper>
    </RadzenFormField>

    <RadzenFormField Text="Име" Variant="Variant.Filled">
        <ChildContent>
            <RadzenTextBox style="display: block" Name="LastName" @bind-Value=@CreateUserModel.LastName Class="w-100" />
        </ChildContent>
        <Helper>
            <RadzenLengthValidator Component="LastName" Min="2" Text="Фамилията трябва да съдържа поне 2 знака" Style="position: absolute" />
            <RadzenLengthValidator Component="LastName" Max="50" Text="Фамилията трябва да съдържа най-много 50 знака" Style="position: absolute" />
        </Helper>
    </RadzenFormField>
</FarmerFormWithButtons>