@using WebUI.ServicesModel.Tenants
@using static WebUI.IdentityConstants
@attribute [Authorize]


<FarmerFormWithButtons TModel="CreateAdminModel"
                       Model="@AdminModel"
                       ItemId="0"
                       OnSubmit="@OnSubmit"
                       OnClose="@OnClose">
    <RadzenFormField Text="Имейл" Variant="Variant.Filled">
        <ChildContent>
            <RadzenTextBox style="display: block" Name="UserEmail" @bind-Value=@AdminModel.UserEmail Class="w-100" />
         </ChildContent>
         <Helper>
            <RadzenEmailValidator Component="UserEmail" Text="Невалиден емайл" Style="position: absolute" />
         </Helper>
     </RadzenFormField>

    <RadzenFormField Text="Име" Variant="Variant.Filled">
        <ChildContent>
            <RadzenTextBox style="display: block" Name="FirstName" @bind-Value=@AdminModel.FirstName Class="w-100" />
        </ChildContent>
        <Helper>
            <RadzenLengthValidator Component="FirstName" Min="2" Text="Името трябва да съдържа поне 2 знака" Style="position: absolute" />
            <RadzenLengthValidator Component="FirstName" Max="50" Text="Името трябва да съдържа най-много 50 знака" Style="position: absolute" />
        </Helper>
    </RadzenFormField>

    <RadzenFormField Text="Фамилия" Variant="Variant.Filled">
        <ChildContent>
            <RadzenTextBox style="display: block" Name="LastName" @bind-Value=@AdminModel.LastName Class="w-100" />
        </ChildContent>
        <Helper>
            <RadzenLengthValidator Component="LastName" Min="2" Text="Фамилията трябва да съдържа поне 2 знака" Style="position: absolute" />
            <RadzenLengthValidator Component="LastName" Max="50" Text="Фамилията трябва да съдържа най-много 50 знака" Style="position: absolute" />
        </Helper>
    </RadzenFormField>

    <RadzenFormField Text="Организация" Variant="Variant.Filled">
        <ChildContent>
            <RadzenDropDown Data=@ListTenants
                            @bind-Value=@AdminModel.TenantId
                            ValueProperty="Value"
                            TextProperty="Name"
                            Name="ArticleType" />
        </ChildContent>
    </RadzenFormField>
 </FarmerFormWithButtons>