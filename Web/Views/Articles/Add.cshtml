@using Application.Extensions
@using Domain.Enum
@model AddArticleViewModel

@{
    ViewData["Title"] = "Add Article";
}

<h2 class="text-center"> Add Article</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" >
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
      <div class="form-group">
            <label>Type</label>
            <select asp-for="ArticleType" class="form-control">
                @foreach (var articleType in EnumHelper.GetAllNamesAndValues<ArticleType>())
                {
                    <option value="@articleType.Key">@articleType.Value</option>
                }
            </select>
        </div>
    <input class="btn btn-primary"  type="submit" value="Submit" />
</form>
