@using Application.Extensions
@model List<GetArticleViewModel>

@{
    ViewData["Title"] = "List Articles";
}

<h2 class="text-center"> List Article</h2>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">Номер</th>
            <th scope="col">Име</th>
            <th scope="col">Тип артикул</th>
        </tr>
    </thead>
    @foreach (var article in Model!)
    {
        <tbody>
            <tr>

                <th scope="row">@article.Id</th>
                <td>@article.Name</td>
                <td>@article.ArticleType.DescriptionAttribute()</td>
                <td><a asp-controller="Articles" asp-action="Edit" asp-route-id="@article.Id" class="fas fa-edit">Редактирай</a></td>
                <td>

                    <button type="button" class="fas fa-trash-alt"  onclick="myFunction(@article.Id)">
                        Изтрий
                    </button>
                 
                    <p id="demo"></p>
                </td>

            </tr>
        </tbody>
    }
</table>
<a asp-controller="Articles" asp-action="Add" class="btn btn-primary">Добави артикул</a>

