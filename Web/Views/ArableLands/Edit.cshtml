@model EditArableLandViewModel

@{
    ViewData["Title"] = "Редактиране на земя";
}

<div class="row">
    <div class="offset-md-2 col-md-8 col-sm-12">
        <h2 class="text-center"> Редактиране на земя </h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SizeInDecar"></label>
                <input asp-for="SizeInDecar" class="form-control">
                <span asp-validation-for="SizeInDecar" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary" type="submit" value="Промени" />
            <a class="btn btn-primary" onclick="history.go(-1);">Назад</a><br />
        </form>
    </div>
</div>
