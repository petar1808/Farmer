@using Application.Extensions
@using Infrastructure.Enum
@using Web.Areas.Identity.ViewModels
@model AddUserViewModel


<h2 class="text-center"> Добавяне на потребител</h2>
<div class="row">
    <div class="offset-md-2 col-md-8 col-sm-12">
        <form method="post">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control">
            </div>
            <div class="form-group">
                 <label asp-for="Role"></label>
                <select asp-for="Role" class="form-control">
                    @foreach (var articleType in EnumHelper.GetAllNamesAndValues<UserRoles>())
                    {
                        <option value="@articleType.Key">@articleType.Value</option>
                    }
                </select>
            </div>
            <input class="btn btn-primary" type="submit" value="Добави" />
        </form>
    </div>
</div>