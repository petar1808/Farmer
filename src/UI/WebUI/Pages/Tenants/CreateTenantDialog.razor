@using WebUI.ServicesModel.Tenants
@attribute [Authorize]

<FarmerFormWithButtons TModel="AddTenantModel"
                       Model="@TenantModel"
                       ItemId="0"
                       OnSubmit="@OnSubmit"
                       OnClose="@OnClose">
    <RadzenFormField Text="Име на организация" Variant="Variant.Filled">
         <ChildContent>
            <RadzenTextBox style="display: block" Name="Name" @bind-Value=@TenantModel.Name Class="w-100" />
         </ChildContent>
         <Helper>
            <RadzenLengthValidator Component="Name" Min="2" Text="Името трябва да съдържа поне 2 знака" Style="position: absolute" />
            <RadzenLengthValidator Component="Name" Max="50" Text="Името трябва да съдържа най-много 50 знака" Style="position: absolute" />
         </Helper>
     </RadzenFormField>
</FarmerFormWithButtons>