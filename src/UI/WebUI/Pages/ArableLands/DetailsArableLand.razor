@using WebUI.Components.Validators
@using WebUI.ServicesModel.ArableLand
@attribute [Authorize]



<FarmerFormWithButtons TModel="ArableLandModel"
                       Model="@ArableLands"
                       ItemId="@ArableLandId"
                       OnSubmit="@OnSubmit"
                       OnClose="@OnClose">
    <RadzenFormField Text="Име" Variant="Variant.Filled">
        <ChildContent>
            <RadzenTextBox style="display: block; width: 100%" @bind-Value=@ArableLands.Name Name="Name" />
        </ChildContent>
        <Helper>
            <RadzenLengthValidator Component="Name" Min="2" Text="Името трябва да съдържа поне 2 знака" Style="position: absolute" />
            <RadzenLengthValidator Component="Name" Max="50" Text="Името трябва да съдържа най-много 50 знака" Style="position: absolute" />
        </Helper>
    </RadzenFormField>
    <RadzenFormField Text="Декари" Variant="Variant.Filled">
        <ChildContent>
            <RadzenNumeric style="display: block; width: 100%" @bind-Value=@ArableLands.SizeInDecar Name="SizeInDecar" />
        </ChildContent>
        <Helper>
            <FarmerPositiveNumericValidator Component="SizeInDecar" />
        </Helper>
    </RadzenFormField>
</FarmerFormWithButtons>
